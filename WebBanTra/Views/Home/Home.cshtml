                    <li data-filter="*" class="filter-active">All</li>
                    <li data-filter=".filter-app">Trà</li>
                    <li data-filter=".filter-product">Bộ Ấm trà</li>
                    <li data-filter=".filter-branding">Bộ trà</li>
                </ul><!-- End Portfolio Filters -->
                @*filter-app : trà
                    filter-product : bộ ấm trà
                    filter-brand: bộ trà
                *@


                <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
                    @if (listSPBanChay != null && listAnhSPBanChay != null && listMoTaSPBanChay != null)
                    {
                        foreach (WebBanTra.Models.SanPham item in listSPBanChay)
                        {
                            if (item != null)
                            {
                                switch (item.MaDM)
                                {
                                    case 1:
                                        {
                                            styleDM = "app";
                                            break;
                                        }


                                    case 2:
                                        {
                                            styleDM = "product";
                                            break;
                                        }


                                    default:
                                        {
                                            styleDM = "branding";
                                            break;
                                        }

                                }
