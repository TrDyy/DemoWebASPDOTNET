                                        <h4>@item.TenSP</h4>
                                        <p>@listMoTaSPBanChay.Find(r => r.MaSP == item.MaSP).MoTa</p>
                                        <br />
                                        <a href="@Url.Action("ChiTietSanPham", "Product", new {id = item.MaSP})" class="btn-get-started animate__animated animate__fadeInUp scrollto" style="padding-right: 90px;">Mua Ngay</a>
